<h2>Login</h2>

<%= form_with(url: "/login") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br/>
  <%= f.label :pass %>
  <%= f.password_field :password %>
  </br>
  <%= f.submit 'Login' %>
  <%= link_to 'Signup', new_user_path%>
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>">
      <%= value %>
    </div>
  <% end %>
<% end %> 